<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_main.xml - MainActivity 的布局文件
    
    【第8次修改】添加分类标签栏和自定义滚动条
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 顶部栏容器 -->
    <LinearLayout
        android:id="@+id/topBarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 分类标签栏 - 水平滚动视图 -->
        <HorizontalScrollView
            android:id="@+id/categoryScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none"
            android:paddingVertical="8dp">
            
            <!-- 分类标签容器 - 线性布局 -->
            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">
                
                <!-- 分类标签将在代码中动态添加 -->
                
            </LinearLayout>
        </HorizontalScrollView>
        
        <!-- 布局切换按钮 -->
        <ImageButton
            android:id="@+id/layoutSwitchButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="切换布局"
            android:scaleType="centerInside"
            android:padding="12dp" />
    </LinearLayout>

    <!-- RecyclerView - 新闻列表 -->
    <!-- 【第16次修改】支持单列/双列布局切换 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/topBarContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/customScrollbar" />
    
    <!-- 自定义滚动条 -->
    <View
        android:id="@+id/customScrollbar"
        android:layout_width="8dp"
        android:layout_height="100dp"
        android:background="@drawable/scrollbar_thumb"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/categoryScrollView"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <!--
        RecyclerView 属性说明：
        
        android:id="@+id/recyclerView"
        - 设置 ID，在 MainActivity 中通过这个 ID 获取
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        - 填满整个屏幕
        
        android:padding="8dp"
        - 内边距 8dp
        
        android:clipToPadding="false"
        - 允许内容滚动到 padding 区域，使滚动更流畅
    -->
    
    <!--
        TextView 属性说明：
        
        android:layout_width="wrap_content"
        - 宽度自适应内容（根据文字长度自动调整）
        - 其他选项：match_parent（填满父容器）、具体数值（如 100dp）
        
        android:layout_height="wrap_content"
        - 高度自适应内容
        
        android:text="Hello World!"
        - 显示的文字内容
        - 建议使用字符串资源：android:text="@string/hello"
        
        app:layout_constraintBottom_toBottomOf="parent"
        - 底部约束到父容器的底部
        
        app:layout_constraintEnd_toEndOf="parent"
        - 右侧约束到父容器的右侧
        
        app:layout_constraintStart_toStartOf="parent"
        - 左侧约束到父容器的左侧
        
        app:layout_constraintTop_toTopOf="parent"
        - 顶部约束到父容器的顶部
        
        这四个约束使 TextView 居中显示在屏幕中央
    -->
    
    <!--
        常用的其他视图控件：
        
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击我" />
        
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入文字" />
        
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground" />
    -->

</androidx.constraintlayout.widget.ConstraintLayout>