<?xml version="1.0" encoding="utf-8"?>
<!--
    item_news_card.xml - 单个新闻卡片的布局文件
    
    作用：定义 RecyclerView 中每个新闻卡片的样式
    
    布局结构：
    - CardView（卡片容器，提供圆角和阴影）
      - LinearLayout（垂直线性布局）
        - ImageView（新闻图片）
        - TextView（新闻标题）
        - TextView（新闻摘要）
        - LinearLayout（水平布局，包含时间和阅读数）
-->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    
    <!--
        MaterialCardView 属性说明：
        
        android:layout_width="match_parent"
        - 宽度填满父容器（屏幕宽度）
        
        android:layout_height="wrap_content"
        - 高度自适应内容
        
        android:layout_margin="8dp"
        - 卡片外边距 8dp
        
        app:cardCornerRadius="12dp"
        - 卡片圆角半径 12dp
        
        app:cardElevation="4dp"
        - 卡片阴影高度 4dp（阴影越大，卡片看起来越"浮"）
        
        app:cardUseCompatPadding="true"
        - 使用兼容性内边距，确保在不同版本上显示一致
    -->

    <!-- 【第18次修改】使用FrameLayout以便叠加菜单按钮 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <!-- 垂直线性布局：从上到下排列子视图 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 新闻图片 -->
        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/news_image_description" />
        
        <!--
            ImageView 属性说明：
            
            android:id="@+id/newsImage"
            - 设置 ID，在代码中通过这个 ID 获取视图
            
            android:layout_height="200dp"
            - 固定高度 200dp
            
            android:scaleType="centerCrop"
            - 图片缩放类型：居中裁剪，保持宽高比填满视图
            
            android:contentDescription
            - 无障碍描述，帮助视障用户理解图片内容
        -->

        <!-- 新闻标题 -->
        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:paddingBottom="4dp"
            android:text="新闻标题"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />
        
        <!--
            TextView 属性说明：
            
            android:padding="12dp"
            - 内边距 12dp（四周）
            
            android:textSize="18sp"
            - 字体大小 18sp（sp 是可缩放像素，会根据用户字体设置调整）
            
            android:textStyle="bold"
            - 粗体文字
            
            android:maxLines="2"
            - 最多显示 2 行
            
            android:ellipsize="end"
            - 超出部分在末尾显示省略号（...）
        -->

        <!-- 新闻摘要 -->
        <TextView
            android:id="@+id/newsSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:text="新闻摘要内容"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- 底部信息栏：垂直布局，时间在上，阅读数在下 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingTop="0dp">

            <!-- 发布时间 -->
            <TextView
                android:id="@+id/newsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-11-23"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:drawableLeft="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp" />

            <!-- 阅读数 -->
            <TextView
                android:id="@+id/newsReadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2万阅读"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:drawableLeft="@android:drawable/ic_menu_view"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>
    
    <!-- 【第18次修改】三点菜单按钮（右下角） -->
    <ImageButton
        android:id="@+id/cardMenuButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_more"
        android:contentDescription="卡片菜单"
        android:padding="8dp"
        android:scaleType="centerInside" />
    
    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
