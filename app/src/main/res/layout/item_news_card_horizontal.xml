<?xml version="1.0" encoding="utf-8"?>
<!--
    item_news_card_horizontal.xml - 横向新闻卡片布局
    
    布局结构：
    - CardView（卡片容器）
      - LinearLayout（水平布局）
        - LinearLayout（垂直布局，包含标题、摘要、底部信息）
        - ImageView（新闻图片，在右侧）
-->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <!-- 水平线性布局：左右排列 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 左侧内容区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 新闻标题 -->
            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新闻标题"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- 新闻摘要 -->
            <TextView
                android:id="@+id/newsSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="新闻摘要内容"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- 底部信息栏：垂直布局，时间在上，阅读数在下 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- 发布时间 -->
                <TextView
                    android:id="@+id/newsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-11-23"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"
                    android:layout_marginBottom="2dp" />

                <!-- 阅读数 -->
                <TextView
                    android:id="@+id/newsReadCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2万阅读"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 右侧新闻图片 -->
        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/news_image_description" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
