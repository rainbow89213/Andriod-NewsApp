<?xml version="1.0" encoding="utf-8"?>
<!-- 选中状态的分类标签样式 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 圆角 -->
    <corners android:radius="20dp" />
    
    <!-- 背景颜色 - 蓝色 -->
    <solid android:color="#2196F3" />
    
    <!-- 内边距 -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />
    
</shape>
